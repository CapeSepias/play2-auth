# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login

# Authentication
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Message
GET     /message/main               controllers.Messages.main
GET     /message/list               controllers.Messages.list
GET     /message/detail/:id         controllers.Messages.detail(id: Int)
GET     /message/write              controllers.Messages.write

GET     /message2/main               controllers.Messages2.main
GET     /message2/list               controllers.Messages2.list
GET     /message2/detail/:id         controllers.Messages2.detail(id: Int)
GET     /message2/write              controllers.Messages2.write


GET     /csrf/with_token            controllers.PreventingCsrfSample.formWithToken
GET     /csrf/without_token         controllers.PreventingCsrfSample.formWithoutToken
POST    /csrf/                      controllers.PreventingCsrfSample.submitTarget


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
